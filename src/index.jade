doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Web Components & Accessibility Sandbox
    link(rel="stylesheet", type="text/css", href="assets/styles/main.css")

  body
    #container
      header
        h1 Web Components & Accessibility Sandbox
      main(role="main")
        include templates/mixins/_dropdown.jade
        include templates/mixins/_div_button.jade
        include templates/mixins/_button_button.jade

        section
          header
            h2 Shadow DOM Content Tests

          article(role="article")
            header
              h3 Replacing Text via Shadow DOM
              p Button in DOM says "Hello tacos" but is replaced with Shadow DOM
            button.taco-button Hello tacos

          article(role="article")
            header
              h3 Shadow DOM Content Element Example
              p The name "Nyan" is replaced by "Tacocat"
            div.name-tag Nyan
            template#name-tag-template
              include styles/shadow-content.css
              .outer
                .boilerplate
                  h3 HELLO
                    span my name is
                .name
                  h4
                    content

          article(role="article")
            header
              h3 Custom Element With Text Content
            include templates/partials/_shadow_article.jade
            taco-article

        section
          header
            h2 Interactive Widgets

          article(role="article")
            // traditional DOM version
            h3 Regular DOM Dropdown Widget
            +dropdown("dropdown1", "label1", "linklist1")

          article(role="article")
            // Shadow DOM version
            h3 Shadow DOM Dropdown Widget
            include templates/partials/_shadow_dropdown.jade
            shadow-dropdown

        section
          header
            h2 Buttons

          div.button-group
            article.button-widget(role="article")
              h3 Regular DOM Element with Tab Index
              +div_button

            article.button-widget(role="article")
              h3 Shadow DOM Element with Tab Index
              include templates/partials/_shadow_div.jade
              div-button

          div.button-group
            article.button-widget(role="article")
              h3 Regular DOM Button
              +button_button

            article.button-widget(role="article")
              h3 Shadow DOM Button
              include templates/partials/_shadow_button.jade
              button-button

      footer
        ul
          li
            h4 Sandbox byÂ 
              a(href="http://marcysutton.com/", target="_blank", title="Link opens in a new window") Marcy Sutton at Substantial.
          li
            h4
              a(href="http://github.com/marcysutton/web-components-accessibility") Source on Github

    script(src="assets/bower_components/platform/platform.js")
    script(src="assets/scripts/main.js")
